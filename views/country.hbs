    <style>
        body {
            background-color: rgb(31, 125, 208);

        }

        #foot {
            position: fixed;
            margin-top: 10rem;
        }

        .container {
            margin: 0px 0px 5rem 0px;
            border: 2px solid grey;
            border-radius: 1rem;
            padding: 2rem;
           
        }

        .form {           
            width: 50%;
            height: 80%;
        }
        h2{
            text-align: center;            
            padding-top: 0;
        }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>



    {{> header}}
  
  <div class="container">
  
        <h2>Add Country</h2>
<div class="form">
        <form class="row gy-2 gx-3 align-items-center">

            <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Country Name</label>
                <input type="text" class="form-control" name="cName" placeholder="India">
            </div>
            <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Capital</label>
                <input type="text" class="form-control" name="capital" placeholder="New Delhi">
            </div>

            <div class="col-md-6">
                <label for="inputCity" class="form-label">STD Code</label>
                <input type="text" value="+1" class="form-control" name="std">
            </div>
            <div class="col-md-6">
                <label for="inputState" class="form-label">Currency</label>
                <select id="inputState" class="form-select" name="currency">
                    <option selected>Choose...</option>
                    <option value="INR">INR</option>
                    <option value="USD">USD</option>
                    <option value="EUR">EUR</option>
                    <option value="AUD">AUD</option>
                </select>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Add Now</button>
            </div>
        </form>
    </div>
  </div>
  


    <h2>All Country</h2>
    <div class="container">
    

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>@fat</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>@twitter</td>
                </tr>
            </tbody>
        </table>

    </div>


    <p id="foot">click here to go to about page <a href="/about">About Page</a></p>
</body>

</html>